.SUFFIXES: .cpp

srcdir = .

top_builddir    = ..
top_srcdir      = ..

SHELL = /bin/sh



CXX = cl
CXXFLAGS = /nologo /G6 /MT /W3 /GX- /DNDEBUG /DWIN32 /D_WINDOWS /Ox 

LDFLAGS = 
LIBS = 
RANLIB = echo


# ===========================================================
# end of configurable options
# ===========================================================


BX_OBJS = \
  dis_decode.o \
  dis_groups.o \
  resolve.o    \
  syntax.o

BX_INCLUDES = disasm.h

BX_INCDIRS = -I.. -I$(srcdir)/.. -I../instrument/stubs -I$(srcdir)/../instrument/stubs

all: libdisasm.a

.cpp.o:
	$(CXX) /c $(BX_INCDIRS) $(CXXFLAGS) /Tp$< /Fo$@



libdisasm.a: $(BX_OBJS)
	-del libdisasm.a
	lib /nologo /subsystem:console /machine:I386 /verbose /out:$@ $(BX_OBJS)
	$(RANLIB) libdisasm.a

$(BX_OBJS): $(BX_INCLUDES)


clean:
	-del *.o
	-del *.a

dist-clean: clean
	-del Makefile

###########################################
# dependencies generated by
#  gcc -MM -I.. -I../instrument/stubs *.cc | sed 's/\.cc/.cpp/g'
###########################################
dis_decode.o: dis_decode.cpp disasm.h ../config.h dis_tables.h opcodes.inc dis_tables.inc
dis_groups.o: dis_groups.cpp disasm.h ../config.h
resolve.o: resolve.cpp disasm.h ../config.h
syntax.o: syntax.cpp disasm.h ../config.h
